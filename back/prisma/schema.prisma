generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Usuario {
  Num_empleado             Int      @id @unique
  Nombre         String
  Apellido       String
  Email          String   @unique // Email Ãºnico
  CUIL           String  @unique 
  Dirrecion String 
  Password  String
  rol  String
}

model Informe {
  id             Int      @id @default(autoincrement()) 
  titulo         String
  contenido      String
  fecha_inicio   String
  fecha_final String 
  planDeRiego PlanDeRiego?
  imagenInforme ImagenesInforme?
}
model ImagenesInforme{
  id Int      @id @default(autoincrement())
  url String   
  informe Informe @relation(fields:[idInforme],references:[id])
  idInforme Int @unique

}

model PlanDeRiego {
  id Int @id @default(autoincrement())
  titulo String 
  inicio DateTime
  fin   DateTime
  diaPlan DiaPlan[]
  informe Informe @relation(fields:[idInforme],references:[id])
  idInforme Int @unique
}


model DiaPlan{
  id Int @id @default(autoincrement())
  fechaDia DateTime 
  titulo String
  color String @db.VarChar(7)
  plan PlanDeRiego @relation(fields:[idPlan], references:[id])
  idPlan Int 
}