generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
model Informe {
  id             Int      @id @default(autoincrement()) // Llave primaria con autoincremento
  titulo         String
  contenido      String
  fecha_inicio   DateTime
  fecha_final DateTime 
}

model Usuario {
  Num_empleado             Int      @id @unique
  Nombre         String
  Apellido       String
  Email          String   @unique // Email Ãºnico
  CUIL           String  @unique 
  Dirrecion String 
  Password  String
}
model Calendario {
  id Int @id @default(autoincrement())
  titulo String
  inicio DateTime
  fin   DateTime
  color String @db.VarChar(7)
}